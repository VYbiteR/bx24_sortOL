{
  "manifest_version": 3,
  "name": "ANIT B24 CHAT SORTER",
  "version": "1.14.5",
  "description": "Отключение группировки Открытых линий, фильтры для чатов",
  "permissions": [],
  "host_permissions": ["*://*.bitrix24.ru/*"],
  "content_scripts": [
    {
      "matches": ["*://*.bitrix24.ru/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.bitrix24.ru/*"]
    }
  ]
}
